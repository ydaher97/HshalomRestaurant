        <Button x:Name="T4"  Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="136,329,0,0" Height="60" Click="T4_Click" Background="#FFA6A6A6"/>
        <Button x:Name="T5" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" Margin="303,118,0,0" Height="40" Click="T5_Click" Background="#FFA6A6A6"/>
        <Button x:Name="T6" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" Margin="303,199,0,0" Height="40" Click="T6_Click" Background="#FFA6A6A6"/>
        <Button x:Name="T7" Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" Margin="303,291,0,0" Height="40" Click="T7_Click" Background="#FFA6A6A6"/>
        <Button x:Name="T1" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="136,42,0,0" Height="60" Click="T1_Click"  Background="#FFA6A6A6"/>
        

    </Grid>
</UserControl>
